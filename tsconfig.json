{
  "compilerOptions": {
    "target": "ESNext",             
    "module": "ESNext",             
    "noImplicitAny": true,          
    "strictNullChecks": true,       
    "esModuleInterop": true,        
    "forceConsistentCasingInFileNames": true,            
    "sourceMap": true,
    "outDir": "./src"        
  },
  "include": ["src/**/*.ts"],      
  "exclude": ["node_modules"]       
}